<UserControl x:Class="PMSWPF.Controls.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMSWPF"
             mc:Ignorable="d" Height="Auto" Width="200">
    
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#BCBCBC"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,3,10,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                    Background="{TemplateBinding Background}"
                    Padding="{TemplateBinding Padding}"
                    CornerRadius="0,20,20,0">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter Content="{TemplateBinding Tag}"
                                      Width="25" Height="25"
                                      Margin="10,-1,10,0"/>
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#EFEFEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="PMS" Foreground="#008BB0" FontSize="18" FontWeight="Bold" Margin="10"/>
            </StackPanel>

            <Border Grid.Row="1" Height="1" Background="#F5F5F5"/>

            <StackPanel Grid.Row="2">
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Dashboard" Click="SidebarButton_Click">
                    <Button.Tag>
                        <Image Source="../Images/Icons/DashboardIcon.png"/>
                    </Button.Tag>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Projects"
                        Foreground="#00A9CE" Background="#20008BB0" IsEnabled="False" Click="SidebarButton_Click">
                    <Button.Tag>
                        <Image Source="../Images/SelectedIcons/ProjectsIcon.png"/>
                    </Button.Tag>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Tasks" Click="SidebarButton_Click">
                    <Button.Tag>
                        <Image Source="../Images/Icons/TasksIcon.png"/>
                    </Button.Tag>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Calendar" Click="SidebarButton_Click">
                    <Button.Tag>
                        <Image Source="../Images/Icons/CalendarIcon.png"/>
                    </Button.Tag>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Settings" Click="SidebarButton_Click">
                    <Button.Tag>
                        <Image Source="../Images/Icons/SettingsIcon.png"/>
                    </Button.Tag>
                </Button>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
