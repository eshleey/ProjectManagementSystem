<UserControl x:Class="PMSWPF.Controls.ProjectListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMSWPF.Controls"
             xmlns:models="clr-namespace:PMSWPF.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <DataTemplate x:Key="ProjectTemplate">
            <Button Click="ProjectBox_Click" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="CardBorder" Background="White" CornerRadius="10" Margin="10" Padding="10" Width="175" Height="200"
                                            RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" UseLayoutRounding="True" RenderTransformOrigin="0.5,0.5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"
                                                       TextTrimming="CharacterEllipsis" MaxHeight="24"/>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0"
                                                       Foreground="#787878" TextTrimming="WordEllipsis" Height="40" MaxHeight="40"/>
                                            <TextBlock Text="Tasks Done: ... / ..." Foreground="#787878"/>

                                            <Grid Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Progress" Foreground="#787878" FontSize="11"/>
                                                <TextBlock Grid.Column="2" Text="...%" Foreground="#787878" FontSize="11"/>
                                            </Grid>

                                            <ProgressBar Height="5" Margin="0,5,0,0" Value="50"
                                                         BorderThickness="0" Background="#BCBCBC" Foreground="#FFCC00"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,20,0,0">
                                                    <Grid Margin="0,0,-10,0" Width="30" Height="30">
                                                        <Ellipse Fill="White"/>
                                                        <Image Source="{Binding Avatar1}" Stretch="UniformToFill" ClipToBounds="True"
                                                               Width="30" Height="30"/>
                                                        <Ellipse Stroke="Black" StrokeThickness="2"/>
                                                    </Grid>
                                                    <Grid Margin="0,0,-10,0" Width="30" Height="30">
                                                        <Ellipse Fill="White"/>
                                                        <Image Source="{Binding Avatar2}" Stretch="UniformToFill" ClipToBounds="True"
                                                               Width="30" Height="30"/>
                                                        <Ellipse Stroke="Black" StrokeThickness="2"/>
                                                    </Grid>
                                                    <Grid Width="30" Height="30">
                                                        <Ellipse Fill="White"/>
                                                        <Image Source="{Binding Avatar3}" Stretch="UniformToFill" ClipToBounds="True"
                                                               Width="30" Height="30"/>
                                                        <Ellipse Stroke="Black" StrokeThickness="2"/>
                                                    </Grid>
                                                </StackPanel>

                                                <Border Grid.Column="1" Background="#20008BB0" Width="70" Height="20" Margin="15,0,0,0"
                                                        VerticalAlignment="Bottom" CornerRadius="10">
                                                    <TextBlock Foreground="#00A9CE" Text="... Day Left"
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="CardBorder" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="CardBorder" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black"
                                                                      BlurRadius="8"
                                                                      Opacity="0.2"
                                                                      ShadowDepth="2"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </DataTemplate>

        <x:Array x:Key="DesignTimeProjects" Type="{x:Type models:ProjectModel}">
            <models:ProjectModel Name="Sample Project 1" Description="This is a sample project description."/>
            <models:ProjectModel Name="Sample Project 2" Description="Another example of a project."/>
            <models:ProjectModel Name="Sample Project 3" Description="More sample project info."/>
        </x:Array>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Projects" Foreground="#008BB0" FontSize="18" FontWeight="Bold"
               Margin="10" VerticalAlignment="Bottom" Grid.Row="0"/>

        <Border Grid.Row="1" Background="#F5F5F5"/>

        <Border Grid.Row="2" Background="#20008BB0">
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Height="300" Margin="10,0" VerticalAlignment="Top">
                <ItemsControl x:Name="ProjectItemsControl" ItemTemplate="{StaticResource ProjectTemplate}"
                  d:ItemsSource="{StaticResource DesignTimeProjects}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
