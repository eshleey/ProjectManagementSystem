<Window x:Class="PMSWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSWPF"
        xmlns:models="clr-namespace:PMSWPF.Models"
        xmlns:controls="clr-namespace:PMSWPF.Controls"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Window.Resources>
        <DataTemplate x:Key="ProjectTemplate">
            <Button Click="ProjectBox_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

                <Border Background="White" CornerRadius="10" Margin="10" Padding="10" Width="175" Height="200">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"
                                   TextTrimming="CharacterEllipsis" MaxHeight="24"/>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0"
                                   Foreground="#787878" TextTrimming="WordEllipsis" Height="40" MaxHeight="40"/>
                        <TextBlock Text="Tasks Done: ... / ..." Foreground="#787878"/>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Progress" Foreground="#787878" FontSize="11"/>
                            <TextBlock Grid.Column="2" Text="...%" Foreground="#787878" FontSize="11"/>
                        </Grid>

                        <ProgressBar Height="5" Margin="0,5,0,0" Value="50"
                                     BorderThickness="0" Background="#BCBCBC" Foreground="#FFCC00"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,20,0,0">
                                <Grid Margin="0,0,-10,0" Width="30" Height="30">
                                    <Ellipse Fill="White"/>
                                    <Image Source="{Binding Avatar1}" Stretch="UniformToFill" ClipToBounds="True"
                                           Width="30" Height="30"/>
                                    <Ellipse Stroke="Black" StrokeThickness="2"/>
                                </Grid>
                                <Grid Margin="0,0,-10,0" Width="30" Height="30">
                                    <Ellipse Fill="White"/>
                                    <Image Source="{Binding Avatar2}" Stretch="UniformToFill" ClipToBounds="True"
                                           Width="30" Height="30"/>
                                    <Ellipse Stroke="Black" StrokeThickness="2"/>
                                </Grid>
                                <Grid Width="30" Height="30">
                                    <Ellipse Fill="White"/>
                                    <Image Source="{Binding Avatar3}" Stretch="UniformToFill" ClipToBounds="True"
                                           Width="30" Height="30"/>
                                    <Ellipse Stroke="Black" StrokeThickness="2"/>
                                </Grid>
                            </StackPanel>

                            <Border Grid.Column="1" Background="#20008BB0" Width="70" Height="20" Margin="15,0,0,0"
                                    VerticalAlignment="Bottom">
                                <TextBlock Foreground="#00A9CE" Text="... Day Left"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Button>
        </DataTemplate>

        <x:Array x:Key="DesignTimeProjects" Type="{x:Type models:Project}">
            <models:Project Name="Sample Project 1" Description="This is a sample project description."/>
            <models:Project Name="Sample Project 2" Description="Another example of a project."/>
            <models:Project Name="Sample Project 3" Description="More sample project info."/>
        </x:Array>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:Sidebar Grid.Column="0"/>

        <Border Grid.Column="1" Width="1" Background="#F5F5F5"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Projects" Foreground="#008BB0" FontSize="18" FontWeight="Bold"
                           Margin="10" VerticalAlignment="Bottom"/>

                <Border Grid.Row="1" Background="#F5F5F5"/>

                <ContentControl x:Name="MainContent" Grid.Row="2"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
